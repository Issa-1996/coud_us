RewriteEngine On
RewriteBase /campuscoud.com/securite/

# Si le fichier ou dossier existe réellement, ne pas réécrire
RewriteCond %{REQUEST_FILENAME} -f [OR]
RewriteCond %{REQUEST_FILENAME} -d
RewriteRule ^ - [L]

# Réécrire les URLs sans extension vers .php
RewriteCond %{REQUEST_FILENAME}.php -f
RewriteRule ^(.+)$ $1.php [L]
